<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taimoortahir.todoapp.Signup"
    android:background="@color/theme_blue">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_lname"
        android:layout_alignStart="@+id/layout_lname"
        android:layout_marginBottom="15dp"
        android:layout_alignEnd="@+id/signup_signup">

        <EditText
            android:id="@+id/f_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:textColor="@color/dark_grey"
            android:textColorHint="@color/dark_grey"
            android:layout_above="@+id/l_name"
            android:layout_alignStart="@+id/l_name"
            android:layout_alignEnd="@+id/l_name" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_email"
        android:layout_alignStart="@+id/layout_email"
        android:layout_marginBottom="15dp"
        android:layout_alignEnd="@+id/signup_signup">

        <EditText
            android:id="@+id/l_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:textColor="@color/dark_grey"
            android:textColorHint="@color/dark_grey"
            android:layout_above="@+id/email_signup"
            android:layout_alignStart="@+id/email_signup"
            android:layout_alignEnd="@+id/email_signup" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_password"
        android:layout_alignStart="@+id/layout_password"
        android:layout_marginBottom="15dp"
        android:layout_alignEnd="@+id/signup_signup">

        <EditText
            android:id="@+id/email_signup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/dark_grey"
            android:textColorHint="@color/dark_grey"
            android:layout_above="@+id/pasword_signup"
            android:layout_alignStart="@+id/pasword_signup"
            android:layout_alignEnd="@+id/pasword_signup" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_cpassword"
        android:layout_alignStart="@+id/layout_cpassword"
        android:layout_marginBottom="15dp"
        android:layout_alignEnd="@+id/signup_signup">

        <EditText
            android:id="@+id/pasword_signup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/c_pasword_signup"
            android:layout_alignStart="@+id/c_pasword_signup"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/dark_grey"
            android:textColorHint="@color/dark_grey"
            android:layout_alignEnd="@+id/c_pasword_signup" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_cpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signup_signup"
        android:layout_alignStart="@+id/signup_signup"
        android:layout_marginBottom="35dp"
        android:layout_alignEnd="@+id/signup_signup">

        <EditText
            android:id="@+id/c_pasword_signup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/dark_grey"
            android:textColorHint="@color/dark_grey"
            android:layout_above="@+id/signup_signup"
            android:layout_alignStart="@+id/signup_signup"
            android:layout_alignEnd="@+id/signup_signup" />
    </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/signup_signup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="66dp"
            android:textColor="@color/black"
            android:background="@drawable/mybutton_2"/>
</RelativeLayout>
