<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="4dip"
             android:color="#5A7FCB" />
         <gradient android:angle="-90" android:startColor="#5A7FCB" android:endColor="#5A7FCB"  />
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="8dip" />
         <stroke android:width="4dip" android:color="#A3A3A3" />
         <solid android:color="#6B6B6B"/>
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="4dip" android:color="@color/blue" />
         <gradient android:angle="-90" android:startColor="@color/blue" android:endColor="@color/blue" />
     </shape>
 </item>
</selector>